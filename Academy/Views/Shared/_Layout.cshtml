<!DOCTYPE html>
<html ng-app="app">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title ng-bind="$state.current.data.pageTitle + ' - Academy' || 'Academy'"></title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav-bar-top></nav-bar-top>

    <ui-view ng-show="!isLoading">
        @RenderBody()
    </ui-view>

    <loading-page></loading-page>

  
    @Scripts.Render("~/bundles/jquery")

    <!-- Load the client component. -->
    <script src="https://js.braintreegateway.com/web/3.6.2/js/client.min.js" async></script>

    <!-- Load the PayPal component. -->
    <script src="https://js.braintreegateway.com/web/3.6.2/js/paypal.min.js" async></script>

    <!-- Load Hosted Fields component. -->
    <script src="https://js.braintreegateway.com/web/3.6.2/js/hosted-fields.min.js" async></script>


    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/main")
    @Scripts.Render("~/bundles/signalR")

    <script src="~/signalr/hubs"></script>
</body>
</html>